extends templates/_default

block includes
  include layouts/includes/_mixins.pug

//- Page Head Variables
block vars
  - var title = 'Some New Site';
  - var description = '';

block content
  .svg__spritesheet
    include ./layouts/includes/inline.svg

  main.main
    header.header
      .wrapper
        .header__content
          h3.header__tagline
            span(data-visibility='hidden') Badges For Badges' Sake
            +inline-svg('tagline', 'header__svg')
          h1.header__title
            span(data-visibility='hidden') For The Badge
            +inline-svg('title', 'header__svg')
          h2.header__subtitle
            span(data-visibility='hidden') Generator
            +inline-svg('subtitle', 'header__svg')
          .header__chevrons
            +inline-svg('chevron-down', 'header__chevron')
            +inline-svg('chevron-down', 'header__chevron')

    section.section
      .wrapper
        .section__card
          .section__card-content
            form.form
              h2.form__title Primary
              label.form__label
                input.form__input(type='text' value='Fuck It')
                span.form__label-text Label
              input.form__color(type='color' value='#a7bfc1')

              label.form__label
                input.form__input(type='text' value='Ship It')
                span.form__label-text Label

              input.form__color(type='color' value='#5593c8')
              input.form__btn(type='submit' value='Generate SVG' name='submit')
        .section__card
          svg.svg(xmlns='http://www.w3.org/2000/svg' width='0' height='35')
            rect.svg__rect(x='0' y='0' width='0' height='35')
            rect.svg__rect(x='0' y='0' width='0' height='35')
            path.svg__text
            path.svg__text

  //- Footer
  include layouts/general/_footer.pug

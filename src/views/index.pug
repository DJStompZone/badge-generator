extends templates/_default

block includes
  include layouts/includes/_mixins.pug

//- Page Head Variables
block vars
  - var title = 'Some New Site';
  - var description = '';

block content
  .svg__spritesheet
    include ./layouts/includes/inline.svg

  .wrapper
    .badge
      p.badge__tagline(data-type='primary') Fuck It
      p.badge__tagline(data-type='secondary') Ship It

    .temp

    form
      input.input(type='text' value='Fuck It')
      input.input(type='text' value='Ship It')
      input.color(type='color' value='#a7bfc1')
      input.color(type='color' value='#5593c8')
      input.btn(type='submit' value='Generate SVG' name='submit')

    svg.svg(xmlns='http://www.w3.org/2000/svg' width='0' height='35')
      rect.svg__rect(x='0' y='0' width='0' height='35')
      rect.svg__rect(x='0' y='0' width='0' height='35')
      path.svg__text
      path.svg__text

  //- Footer
  include layouts/general/_footer.pug
